= form_for @photo do |f|
  - if @photo.errors.any?
    #error_explanation      
      %ul
        - @photo.errors.each do |attr, msg|
          %li= msg

  .field
    = f.label :description_en
    = f.text_field :description_en
  .field
    = f.label :description_fa
    = f.text_field :description_fa
  .field
    = f.label :category_id
    = f.number_field :category_id
  .field
    = f.label :sub_group_id
    = f.number_field :sub_group_id
  .field
    = f.label :products_id
    = f.number_field :products_id
  .actions
    = f.submit 'Save'
