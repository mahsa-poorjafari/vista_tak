= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation      
      %ul
        - @user.errors.each do |attr, msg|
          %li= msg
  .col-xs-6.pull-right
    .form-group
      = f.label 'ایمیل:', :class => "control-label"
      = f.text_field :email, :class => "form-control"
    .form-group
      = f.label 'نام کاربری', :class => "control-label"
      = f.text_field :user_name, :class => "form-control"
    .form-group
      = f.label 'رمزعبور:', :class => "control-label"
      = f.text_field :password, :class => "form-control"
    .form-group
      = f.submit 'ثبت', :class => "btn btn-primary"
  .clear-float
