.margin3{:class => I18n.locale}
  - if notice 
    .col-xs-6.pull-right.alert.alert-success
      = notice
  - if I18n.locale == :en &&  @sub_group.bg_image_en.present? 
    .bg-image
      = image_tag @sub_group.bg_image_en(:original), :id => 'sub_group_normal'
      
  - elsif @sub_group.bg_image.present? 
    .bg-image
      = image_tag @sub_group.bg_image(:original)
      
  .show-sub-group{:class => I18n.locale}
    .show-title-sub-group{:class => I18n.locale}
      %h3= @sub_group.title   
      - if is_admin?
        = link_to 'ویرایش', edit_sub_group_path(@sub_group), :class => "btn btn-info"      

    .clear-float
    .sub-group-discription= raw @sub_group.description
    
