!!!
%html
  %head
    %title= t('vistatech') 
    = stylesheet_link_tag    "application", media: "all"
    
    = csrf_meta_tags 
    = favicon_link_tag 'favicon.png', rel:'shortcut icon', type: 'image/png', :title => "ویستا تک پیشرو"

  %body    
    .main-div{:class => I18n.locale}
      - if I18n.locale == :en
        .blue-border-left.col-xs-12.pull-left{:style => "position:absolute;"}
          .other-menu= render 'static/index_menu'
          = yield 
          .footer.other_footer{:class => I18n.locale}            
            = render 'shared/other_footer_en'

      - else
        .blue-border-right.col-xs-12.pull-right{:style => "position:absolute;"}
          .other-menu= render 'static/index_menu'
          = yield       
          .footer.other_footer{:class => I18n.locale}            
            = render 'shared/other_footer_fa'
            
    - if is_admin?
      = render 'shared/admin_menu'
  
  = javascript_include_tag "application"  
    

