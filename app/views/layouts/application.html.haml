!!!
%html
  %head
    %title= t('vistatech') 
    = stylesheet_link_tag    "application", media: "all"
    = csrf_meta_tags 
    = favicon_link_tag 'favicon.png', rel:'shortcut icon', type: 'image/png', :title => "ویستا تک پیشرو"

  %body
    .navbar
      .navbar-inner
        .container
          - if I18n.locale == :en 
            = link_to '/', :class => "brand" do
              = image_tag 'logo.png', :height => "40", :width => "120", :alt => t('vistatech')
              
            / This is website logo
            / Navigation button, visible on small resolution
            %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
              %i.icon-menu
            .language.pull-right            
              = link_to (image_tag 'flag/en.png'), locale: :en          
              = link_to (image_tag 'flag/fa.png'), locale: :fa
            / Main navigation
            .nav-collapse.collapse.pull-right
              = render 'shared/menu'
            
          - else
            .language.pull-left
              = link_to (image_tag 'flag/en.png'), locale: :en          
              = link_to (image_tag 'flag/fa.png'), locale: :fa
                      
            / This is website logo
            / Navigation button, visible on small resolution
            %button.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse", :type => "button"}
              %i.icon-menu
            / Main navigation
            .nav-collapse.collapse.pull-left
              = render 'shared/menu'
            = link_to '/', :class => "brand", :style => "float:right" do
              = image_tag 'logo.png', :height => "40", :width => "120", :alt => t('vistatech')  
          
    = yield 
    - if is_admin?
      = render 'shared/admin_menu'
  = javascript_include_tag "application"
