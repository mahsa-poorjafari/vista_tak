!!!
%html
  %head
    %title= t('vistatech') 
    = stylesheet_link_tag    "application", media: "all"
    = csrf_meta_tags 
    = favicon_link_tag 'favicon.png', rel:'shortcut icon', type: 'image/png', :title => "ویستا تک پیشرو"

  %body    
    .main-div
      - if current_page?('/')
        .navbar.main-page-menu.pull-right
          = render 'shared/menu' 
      
      - else
        .navbar.other-page.pull-right
          = render 'shared/other_menu' 
              
               
      
              
      = yield 
      
      .footer{:class => I18n.locale}
        .copyright= t('copyright')
    - if is_admin?
      = render 'shared/admin_menu'
  = javascript_include_tag "application"  
    
    
