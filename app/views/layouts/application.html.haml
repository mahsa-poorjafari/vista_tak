!!!
%html
  %head
    %title= t('vistatech') 
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true 
    = javascript_include_tag "application", "data-turbolinks-track" => true 
    = csrf_meta_tags 
    = favicon_link_tag 'favicon.png', rel:'shortcut icon', type: 'image/png', :title => "ویستا تک پیشرو"

  %body
    %header
      .language
        .lan-title= 'LANGUAGE'
        = link_to (image_tag 'flag/en.png'), locale: :en          
        = link_to (image_tag 'flag/fa.png'), locale: :fa
      .menu
        = render 'shared/menu'
    = yield 
    - if is_admin?
      = render 'shared/admin_menu'
