= form_for @slide do |f|
  - if @slide.errors.any?
    #error_explanation
      
      %ul
        - @slide.errors.each do |attr, msg|
          %li= msg
  .col-xs-12
    .col-xs-6.pull-right  
      .form-group
        = f.label 'عنوان به انگلیسی:', :class => "control-label"
        = f.text_field :title_en, :class => "form-control"
      .form-group
        = f.label 'عنوان به فارسی:', :class => "control-label"
        = f.text_field :title_fa, :class => "form-control"
    .col-xs-6.pull-right  
      .form-group
        - if @slide.image.present?
          = image_tag @slide.image(:small)
        = f.label 'انتخاب عکس', :class => "control-label"
        = f.file_field :image
    .clear-float
    .col-xs-12
      .form-group
        = f.label 'توضیحات به انگلیسی:', :class => "control-label"
        .editor
          = f.text_area :description, :class => "ckeditor"
      .form-group
        = f.label 'توضیحات به فارسی:', :class => "control-label"
        .editor  
          = f.text_area :description_fa, :class => "ckeditor"
      .form-group
        = f.submit 'ثبت', :class => "btn btn-primary"
.clear-float
