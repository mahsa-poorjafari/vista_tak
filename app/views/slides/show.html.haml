.margin3{:class => I18n.locale}  

  %div= image_tag @slide.image(:original)
  
  %p
    %b Description:
    = @slide.description


  - if is_admin?
    = link_to 'Edit', edit_slide_path(@slide), :class => "btn btn-info" 
    = link_to 'Destroy', @slide, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger"
