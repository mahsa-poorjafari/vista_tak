.margin3{:class => I18n.locale}  
  %h1 تصاویر اسلایدر
  - if is_admin?
    = link_to 'افزودن تصویر به اسلایدر', new_slide_path, :class => "btn btn-success"
  .col-xs-12
    - @slides.each do |slide|
      .col-xs-6
        = image_tag slide.image(:small)
        %p= slide.description
        - if is_admin?
          .admin-link
            = link_to 'مشاهده', slide, :class => "btn btn-warning"    
            = link_to 'ویرایش', edit_slide_path(slide), :class => "btn btn-info" 
            = link_to 'حذف', slide, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-danger"




